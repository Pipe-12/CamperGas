<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Header con t칤tulo y estado de conexi칩n -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Estabilidad Veh칤culo"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_connection_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游댮 Desconectado"
            android:textColor="#666666"
            android:textSize="10sp" />

    </LinearLayout>

    <!-- Estado de estabilidad -->
    <TextView
        android:id="@+id/widget_stability_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="丘멆잺 SIN DATOS"
        android:textColor="#FF9800"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="4dp" />

    <!-- Imagen del veh칤culo -->
    <ImageView
        android:id="@+id/widget_vehicle_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginVertical="8dp"
        android:contentDescription="Vehicle Inclination"
        android:scaleType="fitCenter" />

    <!-- Valores de inclinaci칩n -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/widget_pitch_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="P: --춿"
            android:textColor="#666666"
            android:textSize="12sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/widget_roll_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="R: --춿"
            android:textColor="#666666"
            android:textSize="12sp"
            android:gravity="center" />

    </LinearLayout>

    <!-- 칔ltima actualizaci칩n y bot칩n de refresh -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/widget_last_update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sin datos disponibles"
            android:textColor="#666666"
            android:textSize="9sp"
            android:gravity="start" />

        <ImageButton
            android:id="@+id/widget_refresh_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/widget_button_background"
            android:src="@drawable/ic_refresh"
            android:contentDescription="Refresh"
            android:scaleType="centerInside" />

    </LinearLayout>

</LinearLayout>